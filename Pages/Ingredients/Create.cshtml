@page
@model RecipeWebsite.Pages.Ingredients.CreateModel
@{
    ViewData["Title"] = "Create";
}

<h1>Dodaj składnik</h1>

@*<h4>Ingredient</h4>*@
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IngredientVM.Name" class="control-label"></label>
                <input asp-for="IngredientVM.Name" class="form-control" />
                <span asp-validation-for="IngredientVM.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IngredientVM.TypeOfFood" class="control-label"></label>
                <select asp-for="IngredientVM.TypeOfFood" class="form-control"
                        asp-items="Html.GetEnumSelectList<RecipeWebsite.Models.TypeOfFood>()">
                    <option value="">-- Wybierz Typ --</option>
                </select>
                <span asp-validation-for="IngredientVM.TypeOfFood" class="text-danger" />
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Powrót</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
