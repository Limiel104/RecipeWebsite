@page
@model RecipeWebsite.Pages.Ingredients.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Ingredient</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ingredient.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ingredient.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ingredient.TypeOfFood)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ingredient.TypeOfFood)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Przepisy")
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Nazwa</th>
                    <th>Ilość</th>
                    <th>Data ostatniego użycia</th>
                </tr>
                @foreach (var item in Model.Ingredient.QuantityInRecipes)
                {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Recipe.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Recipe.LastTimeServed)
                </td>
            </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Ingredient.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
