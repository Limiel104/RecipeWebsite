@page
@model RecipeWebsite.Pages.Ingredients.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edytuj</h1>

@*<h4>Ingredient</h4>*@
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Ingredient.ID" />
            <div class="form-group">
                <label asp-for="Ingredient.Name" class="control-label"></label>
                <input asp-for="Ingredient.Name" class="form-control" />
                <span asp-validation-for="Ingredient.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ingredient.TypeOfFood" class="control-label"></label>
                <select asp-for="Ingredient.TypeOfFood" class="form-control"
                        asp-items="Html.GetEnumSelectList<RecipeWebsite.Models.TypeOfFood>()"></select>
                <span asp-validation-for="Ingredient.TypeOfFood" class="text-danger" />
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Powrót</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
