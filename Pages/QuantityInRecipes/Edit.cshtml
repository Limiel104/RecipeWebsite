@page
@model RecipeWebsite.Pages.QuantityInRecipes.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edytuj</h1>

@*<h4>QuantityInRecipe</h4>*@
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="QuantityInRecipe.QuantityInRecipeID" />
            <div class="form-group">
                <label asp-for="QuantityInRecipe.IngredientID" class="control-label"></label>
                <select asp-for="QuantityInRecipe.IngredientID" class="form-control" asp-items="ViewBag.IngredientID"></select>
                <span asp-validation-for="QuantityInRecipe.IngredientID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuantityInRecipe.RecipeID" class="control-label"></label>
                <select asp-for="QuantityInRecipe.RecipeID" class="form-control" asp-items="ViewBag.RecipeID"></select>
                <span asp-validation-for="QuantityInRecipe.RecipeID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuantityInRecipe.Quantity" class="control-label"></label>
                <input asp-for="QuantityInRecipe.Quantity" class="form-control" />
                <span asp-validation-for="QuantityInRecipe.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="../Recipes/Index">Powrót</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
