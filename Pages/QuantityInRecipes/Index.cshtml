@page
@model RecipeWebsite.Pages.QuantityInRecipes.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.QuantityInRecipe[0].Recipe)
            </th>
            <th>
                Przepis ID
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuantityInRecipe[0].Ingredient)
            </th>
            <th>
                Składnik ID
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuantityInRecipe[0].Quantity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.QuantityInRecipe) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Recipe.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Recipe.RecipeID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ingredient.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ingredient.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.QuantityInRecipeID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.QuantityInRecipeID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.QuantityInRecipeID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
