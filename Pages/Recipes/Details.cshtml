@page
@model RecipeWebsite.Pages.Recipes.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Recipe</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recipe.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recipe.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recipe.NumberOfServings)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recipe.NumberOfServings)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recipe.QuantityInRecipes)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Nazwa Składnika</th>
                    <th>Typ</th>
                    <th>Ilość</th>
                </tr>
                @foreach (var item in Model.Recipe.QuantityInRecipes)
                {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Ingredient.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ingredient.TypeOfFood)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
            </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Recipe.RecipeID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
