@page
@model RecipeWebsite.Pages.Recipes.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Wszystkie Przepisy</h1>

<p>
    <a asp-page="Create">Dodaj nowy przepis</a> |
    <a asp-page="../QuantityInRecipes/Create">Dodaj składnik do przepisu</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Recipe[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Recipe[0].NumberOfServings)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Recipe[0].LastTimeServed)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Recipe) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfServings)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastTimeServed)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.RecipeID">Edytuj</a> |
                <a asp-page="./Details" asp-route-id="@item.RecipeID">Szczegóły</a> |
                <a asp-page="./Delete" asp-route-id="@item.RecipeID">Usuń</a>
            </td>
        </tr>
}
    </tbody>
</table>
